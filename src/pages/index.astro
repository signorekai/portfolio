---
import Layout from "../layouts/Layout.astro";
import Viewport from "../components/Viewport.astro";
import Typewriting from "../components/Typewriting.astro";
import Canvas from "../components/Canvas.astro";
---

<Layout title="Hi">
  <Viewport>
    <div
      class="fixed z-40 w-full border-black header"
      x-data="Stagger(2050, 'header--active')"
    >
      <div class="wrapper">
        <h2
          class="relative w-full opacity-0 transition-all duration-300 ease-out uppercase font-aktiv"
          x-data="Stagger(4000, ['opacity-100'])"
        >
          <ul
            class="marquee inline-flex space-x-3 whitespace-nowrap max-w-full"
            x-data="Marquee({speed: 0.65})"
          >
            <li>* A.K.A SIGNOREKAI ON THE INTERNET</li>
            <li>—</li>
            <li>Get Started by clicking anywhere on the yellow box</li>
            <li>—</li>
            <li>Go on, I won't bite</li>
            <li>—</li>
          </ul>
        </h2>
        <h1 class="normal-case relative mt-1 z-10">
          <Typewriting
            pauseStart={4000}
            pauseEnd={3000}
            textArray={["HI, MY NAME IS ALFRED.", "& I MAKE DIGITAL THINGS."]}
          />
        </h1>
      </div>
    </div>
    <Canvas className="flex-1" />
  </Viewport>
</Layout>
